<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Scroll.Splash"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vTitle"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="16dp"
            android:text="Please input text"
            android:textSize="20sp" />

        <com.sup.dev.android.views.settings.SettingsField
            android:id="@+id/vField_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:inputType="textMultiLine|textCapSentences|textAutoCorrect" />

        <com.sup.dev.android.views.settings.SettingsField
            android:id="@+id/vField_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:inputType="textMultiLine|textCapSentences|textAutoCorrect" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <com.sup.dev.android.views.views.ViewIcon
                android:id="@+id/vIcon"
                style="@style/Icon"
                android:layout_gravity="center|start"
                android:src="@drawable/ic_content_copy_white_24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <com.sup.dev.android.views.views.ViewButton
                    android:id="@+id/vCancel"
                    style="@style/Button.Text"
                    android:layout_marginRight="8dp"
                    android:text="Cancel" />

                <com.sup.dev.android.views.views.ViewButton
                    android:id="@+id/vEnter"
                    style="@style/Button.Text"
                    android:text="Action" />

            </LinearLayout>


        </FrameLayout>


    </LinearLayout>

</ScrollView>
